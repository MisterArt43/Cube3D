{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc générer le fichier actif",
            "command": "/usr/bin/gcc",
            "args": [
                "-fsanitize=address",
                "-g",
                "../../src/*.c",
                "../../src/execution/*.c",
                "../../includes/*.h",
                "../../libft/*.c",
                "-Imlx -Ift",
                "../../libmlx.a",
                "-framework",
                "OpenGL",
                "-framework",
                "AppKit",
                "-fdiagnostics-color"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}